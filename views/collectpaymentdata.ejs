<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <title>Stripe Getting Started Form</title>
  <link href="/css/card.css" rel="stylesheet" type="text/css">
  
 
  <!-- The required Stripe lib -->
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
 
  <!-- jQuery is used only for this example; it isn't required to use Stripe -->
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>  
  
  
 
 
  <script type="text/javascript">
    // This identifies your website in the createToken call below
    Stripe.setPublishableKey('pk_live_vI497pZYEaqjNwApAJQfYQiL');
    var stripeResponseHandler = function(status, response) {
	console.log('yay', response);
      var $form = $('#payment-form');
 
      if (response.error) {
        // Show the errors on the form
        $form.find('.payment-errors').text(response.error.message);
        $form.find('button').prop('disabled', false);
      } else {
        // token contains id, last4, and card type
        var token = response.id;
        // Insert the token into the form so it gets submitted to the server
        $form.append($('<input type="hidden" name="stripeToken" />').val(token));
	  	var the_name = $("#legalname").val();
        $form.append($('<input type="hidden" name="legalName" />').val(the_name));

        // and re-submit
        $form.get(0).submit();
      }
    };
 
    jQuery(function($) {
      $('#payment-form').submit(function(e) {
        var $form = $(this);
		console.log('something');
 
        // Disable the submit button to prevent repeated clicks
        $form.find('button').prop('disabled', true);
		
	  var expgroup = $("#date-exp").val();
	  var expArray = expgroup.split( '/' );
	  var expmm = ( expArray[ 0 ] );
	  var expyy = ( expArray[ 1 ] );
		
 
        Stripe.card.createToken({
                    number: $('#cc').val(),
                    cvc: $('#card-cvc').val(),
                    exp_month: expmm,
                    exp_year: expyy
                }, stripeResponseHandler);
 
        // Prevent the form from submitting with the default action
        return false;
      });
    });
	
	
	
  </script>
</head>
<body>  
 


        <div class="card-wrapper"></div>

        <div class="form-container active">
  		  	<form action="/collectpaymentdata" method="POST" id="payment-form">
			    <span class="payment-errors"></span>
                <input placeholder="Card number" type="text" name="number"  id="cc">
                <input placeholder="Full name" type="text" name="name" id="legalname">
                <input placeholder="MM/YY" type="text" name="expiry" id="date-exp">
                <input placeholder="CVC" type="text" name="cvc" id="card-cvc">
			    <button type="submit" class="thebutton">Submit Card Details</button>
				
            </form>
        </div>
    </div>
	
</body>
	
	
