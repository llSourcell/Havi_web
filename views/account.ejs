<head>
<form name="tableForm">
	<body onload="insertTable();">
    <div id="wrapper"></div>
</form>
</head>

<script type="text/javascript">
function insertTable()
{
    var num_rows = <%- JSON.stringify(issueHistory.length) %>;
    var num_cols = 1;
    var width = 100;
    var theader = "<table id='table1' width = ' "+ width +"% '>";
    var tbody = "";

    for(var j = 0; j < num_cols; j++)
    {
      theader += "<th>Recent Activity "+" </th>";
    }

    for(var i = num_rows - 1; i >= 0; i--)
    {
		var test = <%-JSON.stringify(issueHistory) %>;
        tbody += "<tr>";
            tbody += "<td>";
            tbody += 'You ' + test[i].fundedorclaimed + ' ' + test[i].issueURL + ' for ' + test[i].amount/100 + ' dollars';
            tbody += "</td>";
        tbody += "</tr><br />";
    }
    var tfooter = "</table>";
    document.getElementById('wrapper').innerHTML = theader + tbody + tfooter;
}
</script>
<style>
#table1
{
    border:solid 1px;
    border-collapse:collapse;
	
}

#table1 th
{
    border:solid 1px;
    border-collapse:collapse;
	
}

#table1 td
{
    border:solid 1px;
    vertical-align:middle;
	
}
#wrapper {
  top: 0;
}
